<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 내/외부 보이는 설정 -->
    <attr name="indicatorInnerVisibility" format="enum"/>
    <attr name="indicatorOuterVisibility" format="enum"/>

    <!-- 내/외부 색상 설정 -->
    <attr name="indicatorInnerColor" format="color"/>
    <attr name="indicatorOuterColor" format="color"/>

    <!-- 선택에 따른 투명도 설정 -->
    <attr name="indicatorSelectedAlpha" format="float"/>
    <attr name="indicatorDefaultAlpha" format="float"/>

    <!-- 기본 크기 설정 -->
    <attr name="indicatorRadius" format="integer"/>
    <attr name="indicatorViewWidth" format="integer"/>
    <attr name="indicatorViewHeight" format="integer"/>

    <!-- 선택에 따른 배율 설정 -->
    <attr name="indicatorDefaultMagnification" format="float"/>
    <attr name="indicatorSelectedMagnification" format="float"/>

    <!-- Indicator 각각의 마진 설정 -->
    <attr name="indicatorMarginStart" format="integer" />
    <attr name="indicatorMarginTop" format="integer" />
    <attr name="indicatorMarginRight" format="integer" />
    <attr name="indicatorMarginBottom" format="integer" />

    <declare-styleable name="ImageSlider">
        <attr name="indicatorViewWidth" />
        <attr name="indicatorViewHeight" />
        <attr name="indicatorInnerVisibility"/>
        <attr name="indicatorOuterVisibility"/>
        <attr name="indicatorInnerColor"/>
        <attr name="indicatorOuterColor"/>
        <attr name="indicatorSelectedAlpha"/>
        <attr name="indicatorDefaultAlpha"/>
        <attr name="indicatorRadius"/>
        <attr name="indicatorDefaultMagnification"/>
        <attr name="indicatorSelectedMagnification"/>
        <attr name="indicatorMarginStart"/>
        <attr name="indicatorMarginTop"/>
        <attr name="indicatorMarginRight"/>
        <attr name="indicatorMarginBottom"/>
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <attr name="indicatorViewWidth" />
        <attr name="indicatorViewHeight" />
        <attr name="indicatorInnerVisibility"/>
        <attr name="indicatorOuterVisibility"/>
        <attr name="indicatorInnerColor"/>
        <attr name="indicatorOuterColor"/>
        <attr name="indicatorSelectedAlpha"/>
        <attr name="indicatorDefaultAlpha"/>
        <attr name="indicatorRadius"/>
        <attr name="indicatorDefaultMagnification"/>
        <attr name="indicatorSelectedMagnification"/>
        <attr name="indicatorMarginStart"/>
        <attr name="indicatorMarginTop"/>
        <attr name="indicatorMarginRight"/>
        <attr name="indicatorMarginBottom"/>
    </declare-styleable>
</resources>
